<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "ROA") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="cabecera">
        <div id="login_nav" >
            <% if current_user %>
            Bienvenido <b><%= h  current_user.username %></b>
            <% end %>
        </div>
        <div id="user_nav">
            <% if current_user %>
              <%= link_to "Editar perfil", edit_user_path(:current) %> |
              <%= link_to "Salir", logout_path %>
            <% else %>
              <%= link_to "Registro", new_user_path %> |
              <%= link_to "Entrar", login_path %>
            <% end %>
       </div>
      </div>

      <div id="menu">
            <ul>
            <li><a href="#">inicio</a></li>
            <li><a href="#">acerca de</a></li>
            <li><a href="#">contactos</a></li>
          </ul>
      </div>

      <div id="contenido">
           <%- flash.each do |name, msg| -%>
           <%= content_tag :div, msg, :id => "flash_#{name}" %>
           <%- end -%>
            <%- if show_title? -%>
              <h1><%=h yield(:title) %></h1>
            <%- end -%>
            <%= yield %>
      </div>

      <div id="pie">
        hola
      </div>
    </div>
  </body>
</html>
